            border-radius: 20px;
            color: black;
        }

        .search-button {
            padding: 10px;
            background-color:rgb(170,253,53);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: rgb(170,253,53);
            border-color: black;
            font-weight: bold;
            color: black;
